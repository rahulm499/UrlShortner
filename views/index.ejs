<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
    <div class="container">
    <h1>URL Shortner</h1>
    <form action="/shortUrls" method="POST" class="my-4 gx-4 gy-2 row align-items-center">
        <label for="fullUrl" class="visually-hidden">URL</label>
        <input required placeholder="Url" type="url" name="fullUrl", id="fullUrl" class="form-control col mr-4">
        <button type="submit" class="btn btn-success col-2 mr-2">shrink</button>
    </form>    

    <table class="table table-stripped table-responsive">
        <thead>
            <tr>
                <th>Full Url</th>
                <th>Short Url</th>
                <th>Clicks</th>
            </tr>
        </thead>
        <tbody>
            <% shortUrls.forEach(shortUrls => { %>
                <tr>
                    <td><a href="<%= shortUrls.full %> "><%= shortUrls.full %></a></td>
                    <td><a href="<%= shortUrls.short %> "><%= shortUrls.short %> </a></td>
                    <td><%= shortUrls.clicks %></td>
                </tr>
            <% }) %>
            
        </tbody>
    </table>
    </div>
</body>
</html>